{
  "linter": {
     "enabled": true,
     "ignore": ["node_modules"],
     "rules": {
      "recommended": true
     }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 80,
    "formatWithErrors": false,
    "ignore": ["node_modules"],
    "indentSize": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "trailingComma": "es5"
    }
  }
}